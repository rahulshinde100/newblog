  <body>

<center>

<h1>Listing tags</h1>

<table border="2" cellpadding="10" cellspacing="0" class="listing" summary="Post list" border=2 >
  <thead>
    <tr>
      <th>User</th>
      <th>Tag title</th>
       <% if user_signed_in? %>
      <th>Edit</th>
      <th>Destroy</th>
        <% end %>
    </tr>
  </thead>

  <tbody>

    <% @tags.each do |tag| %>
      <tr>
         <td><%= tag.user.email %></td>
        <td><%= link_to tag.tag_title , tagwisesearch_category_path(tag.permalink)  rescue "" %></td>
        <% if user_signed_in? %>
        <% if tag.user.id == current_user.id %>
        <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
        <td><%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td></td>
          <td></td>
        <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tag', new_tag_path %> <br><br>


<%= link_to 'New Post', new_post_path %> <br><br>


</center>
</body>
</html>
